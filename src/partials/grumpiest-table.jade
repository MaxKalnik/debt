include ./grumpy-data

.text-box.text-box--table.text-box--g-table
  .breadcrumbs__wrap
    .breadcrumbs__item
      a.breadcrumbs__link(href='')
        | Home
    .breadcrumbs__item
      a.breadcrumbs__link(href='')
        | Reports
    .breadcrumbs__item
      a.breadcrumbs__link(href='')
        | The Best and Worst Financial Institutions
    .breadcrumbs__item
      | Which U.S. States Are Home to the Grumpiest and Happiest Travelers?

  h2.block-title Full Grumpiest Ranking

  .tables-container
    .mobile-only
      table.ranking-table.ranking-table--fixed
        thead
          tr
            th Rank
            th State

        tbody
          each value in values
            tr
              td
                = value.rank
              td
                = value.state

    .ranking-table__wrapper
      table.ranking-table.ranking-table--data
        thead
          tr
            th Bank
            th State
            th GrumpIndex Score
            th # of Bad Reviews
            th % Negative Reviews
            th Average Rating
            th %Grumpy
            th.cell-with-icon Average Review

        tbody
          each value in values
            tr
              td
                = value.rank

              td
                = value.state

              td
                p.rate-block
                  = value.score

              td
                = value.badReviews

              td
                = value.negativeReviews

              td
                = value.averageRating

              td
                = value.grumpy

              td
                = value.averageReview

  .btn-container
    a.btn-go-back(href="index.html")
      | GO BACK TO THE FULL STUDY
