include ./table-data

.section.section--table.section--g-table
  .breadcrumbs__wrap
    .breadcrumbs__item
      a.breadcrumbs__link(href='')
        | Home

    .breadcrumbs__item
      a.breadcrumbs__link(href='')
        | Reports

    .breadcrumbs__item
      a.breadcrumbs__link(href='')
        | Most At-Risk States for Credit Card Fraud and Identity Theft

    .breadcrumbs__item
      | CC Fraud Dataset

  h2.section__title CC Fraud Dataset

  .tables-container
    .mobile-only
      table.ranking-table.ranking-table--fixed
        thead
          tr
            th Rank
            th State

        tbody
          each value in values
            tr
              td
                = value.rank
              td
                = value.state

    .ranking-table__wrapper
      table.ranking-table.ranking-table--data
        thead
          tr
            th Rank
            th State
            th Population
            th Income Per Capita
            th CSN CC 2016
            th %Change
            th CSN ID Theft 2016
            th IC3 Fraud Per Capita
            th ID Theft Per Capita

        tbody
          each value in values
            tr
              td
                = value.rank

              td
                = value.state

              td
                = value.population

              td
                = value.perCapitaIncome

              td
                = value.csnCC2016

              td
                = value.change

              td
                = value.csnIDtheft

              td
                = value.IC3Fraud

              td
                = value.IDtheft

  .btn-container
    a.btn-go-back(href="index.html")
      | GO BACK TO THE FULL REPORT
