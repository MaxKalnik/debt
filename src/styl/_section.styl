.section
  padding: 64px 45px
  background-color: $color_white
  margin-bottom: 10px

  +respond-from(1850px)
    padding: 64px 60px

  +respond-to(1439px)
    padding: 45px

  +respond-to(1019px)
    padding: 45px 25px

  +respond-to(779px)
    padding: 30px 12px

.section--upper
  position: relative
  padding-top: 45px
  padding-left: 37px

  +respond-from(1850px)
    position: relative
    padding: 45px 60px 64px 60px

  +respond-to(1439px)
    padding: 45px

  +respond-to(1019px)
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: space-between
    padding: 45px 25px

  +respond-to(779px)
    justify-content: center
    padding: 25px 12px 42px 12px

    .under-title
      font-size: 15px
      line-height: 28px
      font-weight: 200

.section--wide
  padding-top: 0
  padding-left: 0
  padding-right: 0

.section__title
  font-size: 32px
  line-height: 40px
  margin-bottom: 30px
  color: #103144
  text-align: center
  font-weight: 600

  +respond-to(1019px)
    margin-bottom: 30px

  +respond-to(779px)
    font-size 26px
    line-height: 34px

.section--map
  .section__title
    margin-bottom: 0

.section--methodology
  border-radius: 0 0 5px 5px

.section__title--white
  color: #ffffff

.section__under-title
  @extend .main-text
  font-style: italic
  margin: 0 45px
  text-align: center

.section__title--close
  margin-bottom: 12px

.section__under-title--white
  color: #ffffff

.section--k-findings
  background-image: linear-gradient(-180deg, #0a1f37 0%, #03122f 100%)
  color: #ffffff

.section__upper
  position: relative
  width: 100%
  height: 570px
  margin-bottom: 45px

.section__upper--at-risk
  background: url(images/photo/risk.png)

.section__upper--secure
  background: url(images/photo/secure.png)

.section__upper-text
  position: absolute
  width: 100%
  top: 45px
  left: 50%
  transform: translate(-50%)
