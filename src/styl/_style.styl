@import "_variable.styl"

body
  font-family: Whitney SSm A, sans-serif
  $ultraThin()
  color: #0A0C0D

.main-article
  &--table
    margin-bottom: 290px

.content
  width: 1220px
  margin: 0 auto
  position relative

ul,li
  list-style: none
  padding :0
  margin: 0

.main-article
  padding-top: 32px

.page__wrap
  background-image: url(images/footer_bg.png), url(images/svg/clouds_bg.svg), url(images/svg/clouds_bg.svg), linear-gradient(-180deg, #34C4F0 0%, #1C90E2 100%)
  background-position 50% 100%, 0 250px, 600px 50%
  background-repeat no-repeat, repeat-x, repeat-x
  background-size: auto, auto, auto

.main-pic
  position: relative
  background-position: center
  background-size: cover
  height: 568px
  padding: 34px 44px 47px 44px
  display: flex
  flex-direction: column
  justify-content: space-between
  box-sizing: border-box
  border-radius: 5px 5px 0 0
  align-items: flex-start
  position: relative
  background-image: url('images/main_pic.png')
  background-image: -webkit-image-set(url(images/main_pic.png) 1x, url(images/main_pic@2x.png) 2x)

.main-pic__mask
  position: absolute
  left: 0
  bottom: 0
  width: 100%
  height: 200px
  opacity: 0.63
  background-image: linear-gradient(-180deg, rgba(0,0,0,0) 3%, rgba(0,0,0,0.3) 100%)
  z-index: 2

.article-text
  margin-top: auto
  z-index: 5

.article-title
  color: $color_white
  font-size: 50px
  line-height: 70px
  font-weight: 600
  margin-bottom: 12px

.article-text__item
  color: $color_white
  font-size: 22px
  line-height: 28px
  font-weight: 300
  margin-bottom: 36px

.article-author
  position: relative
  color: $color_white
  font-size: 12px
  line-height: 14px
  font-weight: 300
  padding-left: 32px
  &:before
    content: ''
    position: absolute
    left: 0
    top: -2px
    width: 20px
    height: 20px
    background-image: url(images/icons/author.svg)
    background-repeat: no-repeat

.breadcrumbs
  &__wrap
    display: flex
    background-color: rgba(255, 255, 255, .9)
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.10)
    border-radius: 2px
    padding: 0 14px
  &__item
    font-size: 12px
    letter-spacing: 0
    line-height: 42px
    color: #667780
    &:first-child
      &:before
        display: none
    &:before
      content: ''
      display: inline-block
      color: #fff
      width: 6px
      height: 13px
      background-image: url(images/svg/arrow.svg)
      background-position: 0px 5px
      background-size: 100% auto
      margin: 0 6px 0 8px
      background-repeat no-repeat

  &__link
    color: $main_color
    letter-spacing: 0
    line-height: 42px
    text-decoration underline
    text-decoration-color: #A3DCF0
    $ultraThin()
    &:hover
      text-decoration none

.text-box
  padding: 44px 45px 60px 45px
  background-color: $color_white
  margin-bottom: 10px
  &--upper
    position: relative
    padding-bottom: 50px

.upper-pic
  position: absolute
  left: 34px
  img
    width: 120px
    height: 120px

.under-title
  color: #0A0C0D
  font-size: 17px
  line-height: 32px
  font-weight: 200
  margin-bottom: 24px
  padding-left: 150px

.main-text
  color: #0A0C0D
  font-size: 14px
  line-height: 24px
  font-weight: 300
  margin-bottom: 30px
  &:last-child
    margin-bottom: 0

  a
    color: #0DA4F0
    border-bottom  1px solid rgba(30, 146, 204, 0.2)
    &:hover
      border-bottom: none

.block-title
  font-size: 32px
  line-height: 40px
  margin-bottom: 30px
  color: #103144
  text-align: center
  font-weight: 600

.ranking-table__wrapper
  margin-bottom: 44px

.ranking-table__table
  width: 100%
  background-image: linear-gradient(90deg, #1B36CC 0%, #2137B2 96%)
  border-collapse: collapse
  border-radius: 5px
  border: 1px solid #E6E6F2
  box-sizing: border-box
  thead
    th
      height: 46px
      font-size: 10px
      line-height: 16px
      font-weight: bold
      color: #ffffff
      text-transform: uppercase
      text-align: center
      padding: 0 22px
      box-sizing: border-box
      border-right: 1px solid rgba(255, 255, 255, 0.3)
      &:first-child
        text-align: left
      &:last-child
        border-right: none

  tbody
    tr
      background: #ffffff
      border-bottom: 1px solid #E6E6F2
      &:nth-child(odd)
        background: #F8F8FC
      &:last-child
        border-bottom: none

    td
      height: 51px
      font-size: 12px
      line-height: 16px
      font-weight: 600
      color: #0A0C0D
      padding: 0 22px
      box-sizing: border-box
      text-align: center
      &:first-child
        text-align: left
        width: 18%

.num
  color: #859BA6

.btn-container
  display: flex
  justify-content: center
  margin-bottom: 60px

.btn-table
  display: inline-block
  font-size: 12px
  line-height: 26px
  font-weight: 600
  text-transform: uppercase
  color: #2137B2
  border-radius: 5px
  padding: 14px 24px
  border: 1px solid #BEC5EF
  cursor: pointer
  &:after
    content: ''
    display: inline-block
    position: relative
    top: 4px
    width: 20px
    height: 20px
    margin-left: 10px
    background: url('images/icons/btn-icon-safe.svg') center no-repeat

  .btn-table__text
    border-bottom: 1px solid #BCC3E7

  &:hover
    background-image: linear-gradient(-90deg, #1B36CC 0%, #2137B2 96%)
    color: #ffffff
    &:after
      background: url('images/icons/btn-icon-hover.svg') center no-repeat
    .btn-table__text
      border-bottom: none

.cities-items__container
  margin-bottom: 30px
  &:last-child
    margin-bottom: 0

.cities-items__item
  display: flex
  flex-direction: row
  justify-content: space-between
  align-items: flex-start
  margin-bottom: 30px
  &:last-child
    margin-bottom: 0

.cities-items__header
  display: flex
  flex-direction: row
  align-items: center
  margin-bottom: 20px

.cities-items__title
  font-size: 24px
  line-height: 32px
  font-weight: 600
  margin-left: 10px

.state
  font-weight: 200

.cities-items__photo
  position: relative
  width: 434px
  height: 160px
  border-radius: 5px
  border: 10px solid #ffffff
  box-shadow: 0 0 20px 0 rgba(8,53,77,.12), 10px 26px 53px -28px rgba(0,0,0,.75)
  overflow: hidden
  box-sizing: border-box

.cities-items__img-wrap
  position: relative
  height: 140px
  border-radius: 5px
  overflow: hidden

.cities-items__img
  position: absolute
  width: 100%
  max-width: 100%
  top: -40%

.aurora
  top: -85%

.rock-valley
  top: -30%

.new-canaan
  top: -70%

.commerce-township
  top: -70%

.orange-city
  top: -60%

.lincoln
  top: -70%

.bastrop
  top: -90%

.del-city
  top: -50%

.lumberton
  top: -80%

.shawnee
  top: -60%

.hammond
  top: -50%

.anniston
  top: -75%

.selma
  top: -60%

.toledo
  top: -80%


.main-text--under-img
  margin-top: 16px

.cities-items__content
  width: 667px

.cities-items__text
  font-size: 14px
  line-height: 26px

.info-text
  position: relative
  padding: 23px 45px 25px 101px
  font-size: 14px
  line-height: 26px
  font-weight: 300
  font-style: italic
  border: 1px solid #E6E6F2
  border-radius: 5px
  margin-bottom: 30px
  &:before
    content: ''
    position: absolute
    height: 32px
    width: 32px
    top: 50%
    transform: translateY(-50%)
    left: 45px
    background: url(images/icons/info-icon.svg) center no-repeat

.methodology-sources
  margin-left: 87px
  margin-bottom: 32px

.methodology-sources__container
  display: flex
  flex-direction: row
  justify-content: space-between
  flex-wrap: wrap

.methodology-sources__item
  width: 444px
  margin-bottom: 24px

.methodology-sources__title
  font-size: 18px
  line-height: 26px
  font-weight: 600
  margin-bottom: 12px

.methodology-sources__item-title
  font-size: 14px
  line-height: 28px
  font-weight: 600

.sources-item
  font-size: 14px
  line-height: 26px
  font-weight: 300
  font-style: italic
  &:before
    content: ''
    display: inline-block
    width: 6px
    height: 6px
    margin-right: 8px
    background: url(images/icons/bullet.svg)

.methodology-links
  margin-left: 87px

.methodology-links__title
  @extend .methodology-sources__title

.methodology-links__item
  a
    color: #0DA4F0
    font-size: 14px
    line-height: 32px
    border-bottom: 1px solid #D1E9F5
    &:hover
      border-bottom: none

.rate-block
  background: #2137B2
  border-radius: 3px
  font-size: 13px
  color: #fff
  letter-spacing: 0
  font-weight: 600
  line-height: 26px
  height: 26px
  padding: 0 5px 0 28px
  display: inline-block
  position: relative
  vertical-align: text-bottom
  width: 75px
  overflow hidden
  box-sizing border-box
  flex-shrink: 0
  &:before
    content ''
    background-size: 100% auto
    display: block
    background-image: url(images/svg/icon_rate.svg)
    position: absolute
    background-repeat: no-repeat
    width: 13px
    height: 18px
    left: 10px
    top: 6px

.rate-block--table
  padding-left: 5px
  width: 52px
  text-align: center
  &:before
    display: none

.text-box--danger
  .rate-block
    background: #FF6D3B
    &:before
      background-image: url('images/svg/icon_rate_danger.svg')

  .ranking-table__table
    background-image: linear-gradient(90deg, #FF5A2D 0%, #FF7F48 100%)

  .btn-table
    color: #FF6D3B
    border: 1px solid #FFDACE
    &:after
      background: url('images/icons/btn-icon-danger.svg') center no-repeat
    .btn-table__text
      border-bottom: 1px solid #E9CEC5

    &:hover
      background-image: linear-gradient(90deg, #FF5A2D 0%, #FF7F48 100%)
      color: #ffffff
      &:after
        background: url('images/icons/btn-icon-hover.svg') center no-repeat
      .btn-table__text
        border-bottom: none


.reg
  font-weight 600
  font-size: 8px
  color: #95A69D
  letter-spacing: 0
  line-height: 10px
  position: relative
  top: 0
  &--tbl
    color: #ffffff

.methodology-content
  display: flex
  flex-direction: row
  align-items: flex-start
  margin-bottom: 30px

.methodology-img
  position: relative
  width: 80px
  height: 80px
  margin-right: 24px

.related
  background: #FFFFFF
  border-radius: 5px
  margin-top: 30px
  margin-bottom: 200px

.related-head
  min-height 54px
  display flex
  justify-content space-between
  align-items center
  background: #F0FAFF
  box-shadow: 0 1px 0 0 #DCEFF5
  border-radius: 5px 5px 0 0
  padding: 0 31px

.related-title
  font-size: 12px
  color: #0084C3
  letter-spacing: 0
  text-transform uppercase
  font-weight 600
  letter-spacing -.1px

.related-list
  padding: 34px 31px 0px 31px
  display flex
  justify-content space-between
  .col
    width: 43%
    padding-right: 5%

.related-item
  padding-bottom: 30px

.related-item__title
  font-size: 14px
  color: #475359
  letter-spacing: -0.2px
  line-height: 20px
  font-weight 600
  padding-bottom: 12px

.related-item__text
  padding-bottom: 13px
  line-height 24px
  font-size: 14px
  color: #475359
  letter-spacing: -0.1px
  font-weight 300

.related-item__link
  letter-spacing: -0.2px
  font-weight 300
  font-size: 14px
  line-height 24px
  color: #0DA4F0
  border-bottom: 1px solid rgba(13, 164, 240, 0.30)
  padding-bottom: 2px

  &:after
    width: 100%
    display: block
    content ''
    margin-bottom: 3px

  &:hover
    border-bottom-color: rgba(13, 164, 239, 0.0)

.footer-menu__link, .button-main, .button-register, .rate-block
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  font-smoothing: grayscale

.show_more
  position: relative
  width: 440px
  box-sizing: border-box
  font-size: 12px
  line-height: 24px
  font-weight: 600
  color: $color_white
  letter-spacing: 0
  border-radius: 5px
  line-height 56px
  text-transform uppercase
  display inline-block
  padding: 0 24px
  cursor: pointer
  margin-top: 70px
  background-color: $color_white
  background-image: linear-gradient(-180deg, #42CCF8 2%, #1D97EC 98%)
  border: 1px solid rgba(255,255,255,1)
  &:after
    content: ''
    position: absolute
    right: 36px
    top: 18px
    width: 20px
    height: 20px
    background-image: url(images/svg/button_icon.svg)
    background-repeat: no-repeat
  &:hover
    color: #009AEE
    background-color: $color_white
    background-image: none
    border: 1px solid rgba(198,224,246,1)
    transition: all .5s ease
    &:after
      background-image: url(images/svg/button_icon-hover.svg)

.overflow-table
  .block-title
    font-size: 32px
    line-height: 40px
    font-weight: 600

  .mobile-only-close
    display: none

  .mobile-only-show
    display: none
