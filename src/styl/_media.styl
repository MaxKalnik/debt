      td
        padding: 0 12px

@media (max-width: 1019px)
  .content
    width: auto
    max-width: 740px

  .article-title
    font-size: 32px
    line-height: 38px
    font-weight: 600

  .article-text__item
    width: 650px
    font-size: 24px
    line-height: 30px
    font-weight: 300
    margin-bottom: 12px

  .article-author
    font-size: 12px
    line-height: 16px
    font-weight: 300

  .main-pic
    height: 345px
    padding: 32px 25px 32px 25px
    background-image url("images/main_pic_768.png")
    background-image: -webkit-image-set(url(images/main_pic_768.png) 1x, url(images/main_pic_768@2x.png) 2x)
    background-position center

  .top-menu__link
    margin: 0 10px

  .text-box
    padding: 44px 25px 44px 25px
    &--upper
      display: flex
      flex-direction: row
      flex-wrap: wrap
      justify-content: space-between
      padding-left: 25px
      .upper-pic
        position: static
        width: 210px

      .under-title
        width: 445px
        margin-bottom: 32px

      .main-text
        width: 100%

  .block-title
    margin-bottom: 32px

  .under-title
    font-size: 16px
    padding-left: 0

  .calendar
    padding-left: 0

  .calendar__img
    position: static
    margin: 0 auto 18px auto

  .airline-rank
    flex-direction: column

  .airline-rank__table--wrapper
    margin: 32px auto 0 auto
    width: 100%

  .full-table
    thead
      th
        padding: 0 10px
