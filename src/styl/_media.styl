@media (max-width: 759px)
  .content
    margin-left: 10px
    margin-right: 10px

  .top-logo
    display: none

  .mob-logo
    display: block
    width: 35px
    height: 38px

  .breadcrumbs__wrap
    white-space: nowrap

    max-width: 100%
    box-sizing border-box

  .breadcrumbs__item:last-child
    overflow: hidden
    text-overflow: ellipsis

  .article-title
    font-size: 22px
    line-height: 30px
    font-weight: 600

  .article-text__item
    min-width: 265px
    width: auto
    font-size: 16px
    line-height: 24px
    font-weight: 300
    margin-bottom: 12px

  .article-author
    font-size: 12px
    line-height: 16px
    font-weight: 300

  .main-text
    margin-bottom: 20px
    &:last-child
      margin-botoom: 0

  .main-pic
    height: 345px
    padding: 16px 12px 16px 12px

  .main-pic__mask
    height: 170px

  .text-box
    padding: 32px 12px 32px 12px
    &--upper
      justify-content: center
      .upper-pic
        margin-bottom: 32px
      .under-title
        width: 100%

      .under-title
        font-size: 16px
        line-height: 28px
        font-weight: 200

      .main-text
        font-size: 14px
        line-height: 24px
        font-weight: 300

  .cities-items__item
    flex-direction: column

  .methodology-content
    flex-direction: column
    align-items: center

  .cities-items__content
    width: 100%

  .cities-items__photo
    margin-bottom: 22px

  .cities-items__photo-cont
    width: 100%
    margin-bottom: 22px

  .cities-items__photo
    width: 100%
    height: 200px

  .cities-items__img-wrap
    height: 180px

  .cities-items__img
    top: -30%

  .cities-items__title
    font-size: 20px

  .info-text
    padding: 48px 25px 16px 25px
    &:before
      left: 50%
      top: 8px
      transform: translateX(-50%)

  .ranking-table__wrapper--short
    position: relative
    left: -12px
    width: calc(100% + 24px)
    overflow-x: scroll
    .ranking-table__table
      thead
        th
          font-size: 8px

      tbody
        td
          font-size: 10px
          padding: 0
          &:first-child
            font-size: 12px
            padding-left: 4px

      .rate-block
        font-size: 11px

  .ranking-table__table
    thead
      th
        font-size: 10px

    tbody
      td
        &:first-child
          min-width: 130px

  .btn-table
    width: 100%
    display: block
    padding: 10px 12px
    font-size: 10px
    text-align: center
    &:after
      display: none

  .methodology-img
    margin-right: 0
    margin-bottom: 24px

  .under-title
    margin-bottom: 24px

  .full-table-wrapper
    border: none

  .primary-title
    font-size: 20px
    padding-bottom: 22px
    line-height: 34px

  .cols__wrap
    flex-wrap wrap

  .bottom-col
    width: 100%

  .block-title
    font-size 26px
    line-height: 34px

  .main-article--table
    .block-title
      font-size 26px
      line-height: 34px

  .related-list
    padding-top: 19px
    padding-left: 17px
    flex-direction column

  .related-item__link
    line-height 27px

  .related-list .col
    width: 100%

  .related-item
    padding-bottom: 22px

  .related
    margin-top: 17px

  .show-table
    text-align center
    font-size: 12px
    color: $main_color
    letter-spacing: 0
    line-height: 22px
    margin: 0 auto
    display: block
    span
      border-bottom: 1px dotted $main_color
      margin-left: 8px
    &:hover
      span
        border-bottom: none

  .mobile-table
    width: 100%
    margin-bottom: 16px

  .methodology-sources
    margin-left: 0
    margin-bottom: 6px

  .methodology-links
    margin-left: 0

  .methodology-article
    padding-top: 110px
    padding-left: 0

  .methodology-article:before
    left: 50%
    top: 18px
    margin-left: -31px

  .mobile-only-show
    display: block

  .colorful
    display block
    .breadcrumbs__item
      display inline-block

  .only_mob-crop
    width: 100px
    overflow: hidden
    white-space: nowrap
    display: inherit
    text-overflow: ellipsis
    vertical-align: top

  .main-article--table
    .breadcrumbs__item
      &:nth-child(3)
        overflow: hidden
        min-width: 90px

  .mobile-table
    width: 100%
    margin-bottom: 16px

  .mobile-only-close
    display: none
    font-style: normal
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale
    text-align: center
    color: white
    text-decoration: none
    height: 41px
    text-transform: uppercase
    border-radius: 3px
    padding: 0 20px
    overflow: hidden
    font-size: 11px
    line-height: 41px
    font-weight bold
    position: fixed
    background-image: linear-gradient(90deg,#1b36cc 0,#2137b2 96%)
    -webkit-backface-visibility: hidden
    top: 10px
    right: 25px
    .icon
      margin-right: 8px

  .text-box--table
    padding-left: 0
    padding-right: 0

    .breadcrumbs__wrap,
    .block-title,
    .main-text
      margin-left: 12px
      margin-right: 12px

    .ranking-table__table
      tbody
        td
          &:first-child
            min-width: 150px


  .ranking-table--danger
    .mobile-only-close
      background-image: linear-gradient(90deg, #FF5A2D 0%, #FF7F48 100%)

    .rate-block
      background: #FF6D3B
      &:before
        background-image: url('images/svg/icon_rate_danger.svg')

    .ranking-table__table
      background-image: linear-gradient(90deg, #FF5A2D 0%, #FF7F48 100%)

  .ranking-table
    .ranking-table__wrapper
      display: block
      overflow scroll
    .full-table-wrapper
      border: 1px solid #f2ece6

@media (max-width: 450px)
  .cities-items__photo
    width: 100%
    height: 180px

  .cities-items__img-wrap
