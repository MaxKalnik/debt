.breadcrumbs__wrap
  display: flex
  width: auto
  background-color: rgba(255, 255, 255, .9)
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.10)
  border-radius: 2px
  padding: 0 14px

  +respond-to(779px)
    white-space: nowrap
    max-width: 100%
    box-sizing border-box

.breadcrumbs__item
  font-size: 12px
  letter-spacing: 0
  line-height: 42px
  color: #667780

  &:first-child
    &:before
      display: none

  &:last-child
    +respond-to(779px)
      overflow: hidden
      text-overflow: ellipsis

  &:before
    content: ''
    display: inline-block
    color: #fff
    width: 6px
    height: 13px
    background-image: url(images/svg/arrow.svg)
    background-position: 0px 5px
    background-size: 100% auto
    margin: 0 6px 0 8px
    background-repeat no-repeat

.breadcrumbs__link
  color: $main_color
  letter-spacing: 0
  line-height: 42px
  text-decoration underline
  text-decoration-color: #A3DCF0
  $ultraThin()
  &:hover
    text-decoration none
