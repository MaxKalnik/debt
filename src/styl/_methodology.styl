.methodology__content
  display: flex
  flex-direction: row
  align-items: flex-start
  margin-bottom: 45px

  +respond-to(1439px)
    margin-bottom: 30px

  +respond-to(779px)
    flex-direction: column
    align-items: center
    margin-bottom: 24px

.methodology__img
  position: relative
  min-width: 80px
  height: 80px
  margin-right: 24px

  +respond-to(779px)
    margin-right: 0
    margin-bottom: 24px

.methodology__text-item
  @extend .main-text
  margin-bottom: 24px
  &:last-child
    margin-bottom: 0

.methodology__sources
  margin-left: 104px

  +respond-to(779px)
    margin-left: 0
    margin-bottom: 24px

.methodology__sources-title
  font-size: 18px
  line-height: 20px
  font-weight: 600
  margin-bottom: 12px

.methodology__sources-list-item
  position: relative
  font-size: 14px
  line-height: 26px
  font-weight: 300
  padding-left: 14px
  font-style: italic
  &:before
    content: ''
    width: 6px
    height: 6px
    position: absolute
    left: 0
    top: 10px
    background: url(images/icons/methodology-bullet.svg) center no-repeat

.methodology__links-link
  color: #21abf1
  border-bottom: 1px solid #d1e9f5
  &:hover
    border-bottom: none
