button
  font-family: Whitney SSm A, sans-serif

.btn__container
  display: flex
  justify-content: center
  margin-top: 32px

  +respond-to(779px)
    margin: 4px 12px 0 12px

.btn__main
  display: inline-block
  font-size: 12px
  line-height: 26px
  font-weight: 600
  text-transform: uppercase
  color: #d31858
  border-radius: 5px
  padding: 14px 24px
  border: 1px solid #d31858
  cursor: pointer
  box-sizing: border-box
  transition: .25s ease-out

  +respond-to(779px)
    width: 100%
    max-width: 300px
    display: block
    padding: 10px 12px
    font-size: 10px
    text-align: center
    margin-top: 12px

  &:after
    content: ''
    display: inline-block
    position: relative
    top: 4px
    width: 20px
    height: 20px
    margin-left: 10px
    background: url('images/icons/btn-icon-green.svg') center no-repeat

    +respond-to(779px)
      display: none

  &:hover
    background-image: linear-gradient(90deg,#b70a36 0,#e01d6d 100%)
    color: #ffffff
    border: 1px solid transparent
    &:after
      background: url('images/icons/btn-icon-hover.svg') center no-repeat

.btn__main-text--red
  border-bottom: 1px solid rgba(218,149,44, .3)

.section--at-risk
  .btn__main
    color: #e53f36
    border: 1px solid #fedfdd

    &:after
      background: url('images/icons/btn-icon-red.svg') center no-repeat

    &:hover
      color: #ffffff
      background: #da3e2c
      &:after
        background: url('images/icons/btn-icon-hover.svg') center no-repeat
      .btn__main-text
        border-bottom: none

.section--secure
  .btn__main
    color: #6d8608
    border: 1px solid #e2e7ce

    .btn__main-text
      border-bottom: 1px solid rgba(109,134,8,0.2)

    &:hover
      color: #ffffff
      background: #6d8608

      .btn__main-text
        border-bottom: none
