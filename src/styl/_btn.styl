button
  font-family: Whitney SSm A, sans-serif

.btn__container
  display: flex
  justify-content: center
  margin-top: 32px

  +respond-to(779px)
    margin: 4px 12px 0 12px

.btn__main
  display: inline-block
  font-size: 12px
  line-height: 26px
  font-weight: 600
  text-transform: uppercase
  color: #d31858
  border-radius: 5px
  padding: 14px 24px
  border: 1px solid #d31858
  cursor: pointer
  box-sizing: border-box
  transition: .25s ease-out

  +respond-to(779px)
    width: 100%
    display: block
    padding: 10px 12px
    font-size: 10px
    text-align: center

  &:after
    content: ''
    display: inline-block
    position: relative
    top: 4px
    width: 20px
    height: 20px
    margin-left: 10px
    background: url('images/icons/btn-icon-safe.svg') center no-repeat

    +respond-to(779px)
      display: none

  .btn__main-text
    border-bottom: 1px solid rgba(211,24,88,0.3)

  &:hover
    background-image: linear-gradient(90deg,#b70a36 0,#e01d6d 100%)
    color: #ffffff
    border: 1px solid transparent
    &:after
      background: url('images/icons/btn-icon-hover.svg') center no-repeat
    .btn-main__text
      border-bottom: 1px solid transparent

.section--at-risk
  .btn__main
    border: 1px solid #fedfdd
    color: #e53f36

    &:after
      background: url('images/icons/btn-icon-safe-red.svg') center no-repeat

    &:hover
      color: #ffffff
      background-image: linear-gradient(-90deg, #FF7962 0%, #FF4433 98%)
      &:after
        background: url('images/icons/btn-icon-hover.svg') center no-repeat
      .btn__main-text
        border-bottom: none

.section--secure
  .btn__main
    border: 1px solid #d31858
    color: #30a1ab
    border: 1px solid #dbeef0

    &:hover
      color: #ffffff
      background-image: linear-gradient(-90deg, #39ADB6 0%, #30A0AB 100%)

      .btn__main-text
        border: 1px solid transparent

  .btn__main-text
    border-bottom: 1px solid #dbeef0
